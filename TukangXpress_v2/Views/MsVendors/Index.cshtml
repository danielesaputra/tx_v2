@model IEnumerable<TukangXpress_v2.Models.MsVendor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm("Index", "MsVendors", FormMethod.Get))
    {
    <p>
        Search by Email: @Html.TextBox("SearchString") <br /><br />
        <input type="submit" value="Search" />
    </p>
    }
</p>
<table class="table">
    <tr>
        <th>
            <center>Vendor ID</center>
        </th>
        <th>
            <center>Vendor Email</center>
        </th>
        <th>
            <center>Vendor Balance</center>
        </th>
        <th>
            <center>Password</center>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <center>@Html.DisplayFor(modelItem => item.Vendor_ID)</center>
        </td>
        <td>
            <center>@Html.DisplayFor(modelItem => item.Vendor_Email)</center>
        </td>
        <td>
            <center>@Html.DisplayFor(modelItem => item.Vendor_Balance)</center>
        </td>
        <td>
            <center>@Html.DisplayFor(modelItem => item.Password)</center>
        </td>
        <td>
            <center>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </center>
        </td>
    </tr>
}

</table>
