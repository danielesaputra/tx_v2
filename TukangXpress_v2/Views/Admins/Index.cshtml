@model IEnumerable<TukangXpress_v2.Models.Admin>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm("Index", "Admins", FormMethod.Get))
    {
         <p> Search by Name: @Html.TextBox("SearchString") <br />  <br /> 
         <input type="submit" value="Search" /></p>
    } 
</p>
<table class="table">
    <tr>
        <th>
            <center>Admin Name</center>
        </th>
        <th>
            <center>Password</center>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <center>@Html.DisplayFor(modelItem => item.Name_admin)</center>
        </td>
        <td>
            <center>@Html.DisplayFor(modelItem => item.Password_admin)</center>
</td>
        <td>
            <center>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </center>
        </td>
    </tr>
}

</table>
